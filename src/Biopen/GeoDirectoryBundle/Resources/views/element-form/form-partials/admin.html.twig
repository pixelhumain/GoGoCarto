<div id="section_admin">
	<h2 id="admin-title">Admin</h2>
	
	<div class="col s12">
		<input type="checkbox" name="send_mail" id="send_mail" checked/>
		<label for="send_mail">Pr√©venir {{ config.elementDisplayNameDefinite }} {{ editMode ? 'des modifications' : "de l'ajout" }}</label> 	
	</div>

	{# if element is PendingModification #}
